{
  "name": "@dealort/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "build": "tsdown",
    "db:local": "docker-compose up -d postgres",
    "db:push": "bun run --env-file ../../.env drizzle-kit push",
    "db:studio": "bun run --env-file ../../.env drizzle-kit studio",
    "db:generate": "bun run --env-file ../../.env drizzle-kit generate",
    "db:migrate": "bun run --env-file ../../.env drizzle-kit migrate"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.2",
    "tsdown": "catalog:",
    "@libsql/client": "^0.14.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@dealort/utils": "workspace:*",
    "@neondatabase/serverless": "^1.0.2",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.44.2",
    "pg": "^8.17.1",
    "postgres": "^3.4.5",
    "zod": "catalog:"
  }
}
