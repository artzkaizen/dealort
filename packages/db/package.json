{
  "name": "@dealort/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "build": "tsdown",
    "db:local": "turso dev --db-file local.db",
    "db:push": "bun run --env-file ../../.env drizzle-kit push",
    "db:studio": "bun run --env-file ../../.env drizzle-kit studio",
    "db:generate": "bun run --env-file ../../.env drizzle-kit generate",
    "db:migrate": "bun run --env-file ../../.env drizzle-kit migrate"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.2",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@dealort/utils": "workspace:*",
    "drizzle-orm": "^0.44.2",
    "@libsql/client": "^0.14.0",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
