{
  "name": "dealort",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@orpc/server": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@orpc/client": "^1.10.0",
      "arcjet": "^1.0.0-beta.15",
      "resend": "^4.0.0",
      "@better-auth/passkey": "^1.4.5"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @dealort/db db:push",
    "db:studio": "turbo -F @dealort/db db:studio",
    "db:generate": "turbo -F @dealort/db db:generate",
    "db:migrate": "turbo -F @dealort/db db:migrate",
    "auth:generate": "npx @better-auth/cli@latest generate --config ./packages/auth/src/index.ts --output ./packages/db/src/schema/auth.ts --yes",
    "dev:email": "turbo -F @dealort/emails dev"
  },
  "dependencies": {
    "@arcjet/protocol": "1.0.0-beta.15",
    "@better-auth/passkey": "^1.4.5",
    "@bufbuild/protobuf": "1.10.1",
    "@connectrpc/connect": "^1.6.1",
    "@connectrpc/connect-node": "^2.1.1",
    "dotenv": "^17.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/bun": "^1.2.6",
    "@vitest/coverage-v8": "^4.0.16",
    "tsdown": "^0.15.5",
    "turbo": "^2.5.4",
    "typescript": "^5.9.3",
    "ultracite": "6.3.2",
    "vitest": "^4.0.16"
  },
  "packageManager": "bun@1.3.1"
}
